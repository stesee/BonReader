{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [

        {
             // configuration for extension msjsdiag.debugger-for-chrome
             // 1. run "npm start"
             // 2. Start "Windows Launch Chrome against localhost" run and debug session
            "type": "pwa-chrome",
            "request": "launch",
            "name": "Windows Launch Chrome against localhost",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}",
        },
        {
            // configuration for extension msjsdiag.debugger-for-chrome
            // 1. Install msjsdiag.debugger-for-chrome
            // 2. Install Chromium using snap
            // 4. run "npm start"
            // 5. start "Linux Launch Chromium against localhost" run and debug session
            "type": "pwa-chrome",
            "request": "launch",
            "name": "Linux Launch Chromium against localhost",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}",
            "runtimeExecutable": "/snap/bin/chromium",
            // "runtimeArgs": [
            //     "--remote-debugging-port=9222"
            // ]
        }
    ]
}